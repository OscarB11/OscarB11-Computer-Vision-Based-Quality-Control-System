        <Style x:Key="TaskButton" TargetType="{x:Type Button}">
            <Setter Property="Foreground"
            Value="White" />
            <Setter Property="Cursor"
            Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Border x:Name="mouseover"
                        Background="{TemplateBinding Background}"   
                        CornerRadius="12"
                        BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect Color="#009CB6E2" BlurRadius="70"/>
                                </Border.Effect>
                            </Border>
                            <Border CornerRadius="3" BorderThickness="1" BorderBrush="Transparent">
                                <Grid Background="{TemplateBinding Background}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Path x:Name="path" Width="10" Height="10" Stretch="Uniform" Stroke="{StaticResource WhiteColor}" Fill="{StaticResource WhiteColor}" Data="{Binding Tag,RelativeSource={RelativeSource TemplatedParent}}"
                              HorizontalAlignment="Right"/>
                                    <TextBlock Text="{TemplateBinding Content}"  HorizontalAlignment="Center"
                                               Style="{DynamicResource TaskTextBlockStyle}" Grid.Column="1" Margin="0,0,0,0"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TaskTextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground"
             Value="{DynamicResource WhiteColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="TopButtonStyle" TargetType="{x:Type Button}">
