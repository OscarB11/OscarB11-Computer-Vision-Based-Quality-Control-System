                                                    <Border CornerRadius="3" BorderThickness="1" BorderBrush="Transparent">
                                                        <Grid Background="{TemplateBinding Background}">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="0"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <!--<Path x:Name="path" Width="13.33" Height="13.33" Stretch="Uniform" Fill="{StaticResource WhiteColor}" Data="{Binding Tag,RelativeSource={RelativeSource TemplatedParent}}"
                      HorizontalAlignment="Right"/>-->
                                                            <TextBlock Text="{TemplateBinding Content}" HorizontalAlignment="Center"
                                                                       Style="{DynamicResource TaskTextBlockStyle}" Grid.Column="1" Margin="10,0,0,0"/>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity"  Value="0.7"/>
                                                        </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </StackPanel.Resources>
                            <TextBlock x:Name="txtTime" Text="00:00" Style="{StaticResource HeaderTextStyle}"
                                        HorizontalAlignment="Center" Margin="0,0,0,10" Visibility="Visible"/>
                            <Button Name="startButton" Content="Start session" Click="StartButton_Click" />
                            <Button Name="stopButton" Content="End session" Click="StopButton_Click" />
                            <Button Name="passButton" Content="Pass" Click="PassButton_Click" />
                            <Button Name="failButton" Content="Fail" Click="FailButton_Click" />
                            <Button Name="reportButton" Content="Report" Click="ReportButton_Click" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <Grid x:Name="gridSettings" Grid.Column="1" Background="{StaticResource MainThemeRegionColor}"
      Visibility="{Binding ElementName=btnSettings,Path=IsChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Image Source="/PCB_Vision;component/Resources/Images/TaskTop.png" Stretch="Fill"/>
                    <TextBlock Margin="46,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource HeaderTextStyle}">
                                <Setter Property="Text" Value="Settings"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Grid>


            <Grid x:Name="gridHelp" Grid.Column="1" Background="{StaticResource MainThemeRegionColor}"
      Visibility="{Binding ElementName=btnHelp,Path=IsChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Image Source="/PCB_Vision;component/Resources/Images/TaskTop.png" Stretch="Fill"/>
                    <TextBlock Margin="46,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource HeaderTextStyle}">
                                <Setter Property="Text" Value="Help"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Grid>

            <Grid x:Name="gridAllSession" Grid.Column="1" Background="{StaticResource MainThemeRegionColor}"
Visibility="{Binding ElementName=btnAllSession,Path=IsChecked,Converter={StaticResource BooleanToVisibilityConverter}}" d:IsHidden="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Image Source="/PCB_Vision;component/Resources/Images/TaskTop.png" Stretch="Fill"/>
                    <TextBlock Margin="46,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource HeaderTextStyle}">
                                <Setter Property="Text" Value="All Sessions"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Grid>
        </Grid>
        <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="30" Margin="10" Background="Red" Foreground="White" Click="CloseButton_Click" />
    </Grid>
</Window>
