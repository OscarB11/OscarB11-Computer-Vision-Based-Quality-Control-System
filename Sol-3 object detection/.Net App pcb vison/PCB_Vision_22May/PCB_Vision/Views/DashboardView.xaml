            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource MainForeground}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
