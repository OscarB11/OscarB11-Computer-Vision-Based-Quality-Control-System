                                    <TextBlock Text="{TemplateBinding Content}" Style="{DynamicResource TaskTextBlockStyle}" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity"  Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
